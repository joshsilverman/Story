    .clr

    .right.multiplication= image_tag "deck/multiplication.png"
    .clr

    .left
      %h3 Students must learn:
    .right 
      .ig.benchmarks
        -(1..130).each do |i|
          = image_tag "deck/benchmark.png"
        .clr
        .num
          %strong 130 
          benchmarks (avg)
    .clr
    
    .right.equals= image_tag "deck/equals.png"
    .clr

    .left
      %h3 Teachers must track progress for: 
    .right 
      .ig.skills
        -(1..3068).each do |i|
          = image_tag "deck/benchmark.png"
        .clr
        .num
          %strong 3068 
          student skills
    .clr

