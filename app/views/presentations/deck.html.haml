  / .beginning
  .slide.market
    %h1 
      Market

    %h2 
      Initial customer: K12 Teacher
      %br 
      (supported by schools/PTA)
    %hr
    .left
      .ig.teachers
        -(1..3).each do |i|
          = image_tag "deck/teacher.png"
        .last= image_tag "deck/teacher.png"
        .clr
        .num
          %strong 3.7M 
          teachers
      .clr
    .right.multiplication= image_tag "deck/multiplication.png"
    .right
      .ig
        -(1..53).each do |i|
          = image_tag "deck/money.png"
        .clr
        .num
          %strong $538 
          on instruction material
      .clr
    .clr
    .equals= image_tag "deck/equals.png"
    .clr
    %h4 $1.9B Teacher market

    %h2 Second customer: K12 Parent
    %hr
    .left
      .ig.student
        -(1..81).each do |i|
          = image_tag "deck/student.png"
        .last= image_tag "deck/student.png"
        .clr
        .num
          %strong 81.5M 
          K12 students
      .clr
    .right.multiplication= image_tag "deck/multiplication.png"
    .right
      .ig.price
        .num
          %strong $120 
          ($10/month*)
          %br
          %span *Same pricing as TenMarks, BrainPop

      .clr
    .clr
    .equals= image_tag "deck/equals.png"
    .clr
